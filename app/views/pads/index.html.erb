<button id="newPad" class="btn btn-primary" data-toggle="modal" data-target="#newPadDlg">New Pad</button>
<ul>
<% @pads.each do |pad| %>
	<li><%= link_to pad.title, pad %></li>
<% end %>
</ul>
<div class="modal hide fade" id="newPadDlg">
	<div class="modal-header">
	  <a class="close" data-dismiss="modal">Ã—</a>
	  <h3>New Pad</h3>
	</div>
	<div class="modal-body">
		<%= form_for Pad.new, :id => "newPadForm" do |f| %>
		<p>Input pad's title</p>
		<%= f.text_field :title %>
		<% end %>
	</div>
	<div class="modal-footer">
	  <%= submit_tag "Create", :class => "btn btn-primary", "data-target" => "#new_pad" %>
	  <a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
</div>